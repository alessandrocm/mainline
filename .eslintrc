{
    "rules": {
        "no-console": 2,
        "indent": [
            1,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": [
            2,
            "global"
        ],
        "handle-callback-err": [
            2,
            "^.*(e|E)rr"
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": "eslint:recommended"
}
